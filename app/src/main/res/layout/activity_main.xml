<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#50bab9bf" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <com.zmg.lib.nav.IconWithText
                android:id="@+id/btm_menu_community"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:menu_icon="@mipmap/main_community_press"
                app:menu_icon_height="21dp"
                app:menu_icon_width="21dp"
                app:menu_text_textColor="@color/black_pure"
                app:menu_text_textSize="10dp"
                app:menu_title="@string/main_menu_tab_community" />

            <com.zmg.lib.nav.IconWithText
                android:id="@+id/btm_menu_scene"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:menu_icon="@mipmap/main_scene"
                app:menu_icon_height="21dp"
                app:menu_icon_width="21dp"
                app:menu_text_textColor="@color/main_bottom_tv_gray"
                app:menu_text_textSize="10dp"
                app:menu_title="@string/main_menu_tab_scene" />

            <com.zmg.lib.nav.IconWithText
                android:id="@+id/btm_menu_production"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:menu_icon="@mipmap/main_production"
                app:menu_icon_height="21dp"
                app:menu_icon_width="21dp"
                app:menu_text_textColor="@color/main_bottom_tv_gray"
                app:menu_text_textSize="10dp"
                app:menu_title="@string/main_menu_tab_production" />


            <com.zmg.lib.nav.IconWithText
                android:id="@+id/btm_menu_me"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:menu_icon="@mipmap/main_me"
                app:menu_icon_height="21dp"
                app:menu_icon_width="21dp"
                app:menu_text_textColor="@color/main_bottom_tv_gray"
                app:menu_text_textSize="10dp"
                app:menu_title="@string/main_menu_tab_me" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>